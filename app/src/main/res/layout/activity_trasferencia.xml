<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Trasferencia"
    android:background="@mipmap/fondo">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_interno" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="90dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"

            android:text="Establecimiento"
            android:textColor="@color/colorBlack"
            android:textSize="18dp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/card_trasfermoney"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginHorizontal="20dp"
            app:cardBackgroundColor="#1a4088"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        android:src="@drawable/transfer_bankicon" />


                    <EditText
                        android:id="@+id/et_estab"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/btn_edittextname"
                        android:enabled="false"
                        android:hint="Inkafarma"
                        android:inputType="text"
                        android:lineSpacingExtra="10sp"
                        android:paddingLeft="40.5dp"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        android:textColor="#323232"
                        android:textColorHint="@color/colorBlack"
                        android:textSize="15sp" />

                </LinearLayout>


            </LinearLayout>


        </androidx.cardview.widget.CardView>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:text="Monto"
            android:textColor="@color/colorBlack"
            android:textSize="18dp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/card_trasfermoneyi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            app:cardBackgroundColor="#1a4088"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        android:src="@drawable/transfer_icon" />


                    <EditText
                        android:id="@+id/et_valor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/btn_edittextname"
                        android:hint="Ingrese el Monto"
                        android:inputType="number"
                        android:lineSpacingExtra="10sp"
                        android:paddingLeft="40.5dp"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        android:textColor="#323232"
                        android:textSize="15sp" />

                </LinearLayout>


            </LinearLayout>


        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginStart="20dp"
                android:layout_marginBottom="10dp"
                android:text="DescripciÃ³n"
                android:textColor="@color/colorBlack"
                android:textSize="18dp"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="*Opcional"
                android:textColor="@color/colorBlack"
                android:textSize="10dp" />

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_trasfermoneyo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            app:cardBackgroundColor="#1a4088"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        android:src="@drawable/transfer_bankicon" />


                    <EditText
                        android:id="@+id/et_desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/btn_edittextname"
                        android:editable="false"
                        android:hint="Escriba..."
                        android:inputType="text"

                        android:lineSpacingExtra="10sp"
                        android:paddingLeft="40.5dp"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        android:textColor="#323232"
                        android:textSize="15sp" />

                </LinearLayout>


            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/btntransferir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="36dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn_blue"
            android:gravity="center"
            android:lineSpacingExtra="3sp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:text="Transferir"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>


</RelativeLayout>